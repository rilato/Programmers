#include <iostream>
#include <string>
#include <vector>
#include <cmath>

using namespace std;

vector<int> solution(int brown, int yellow) {
    vector<int> answer;
    
    int sum = brown + yellow;
    
    int row = sqrt(sum);
    
    if (row * row == sum) {
        answer.push_back(row);
        answer.push_back(row);
    }
    else {
        for (int i = row + 1; row <= sum; i++) {
            if (sum % i == 0) {
                int col = sum / i;
                
                // 노란색 칸은 전체 칸에서 좌우 한 칸씩, 상하 한 칸씩 덜 차지한다.
                if ((i - 2) * (col - 2) == yellow) {
                    answer.push_back(i);
                    answer.push_back(col);

                    break;   
                }
            }
        }   
    }
    
    return answer;
}
